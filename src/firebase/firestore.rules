rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------
    // صلاحيات المدير العام
    // --------------------------
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --------------------------
    // المفضلات (Favorites) - القاعدة النهائية المصححة
    // --------------------------
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == favoriteId;
    }

    // --------------------------
    // التعليقات داخل المباريات
    // --------------------------
    match /matches/{matchId}/comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الردود داخل التعليقات
    match /matches/{matchId}/comments/{commentId}/replies/{replyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الإعجابات (Likes)
    match /matches/{matchId}/comments/{commentId}/likes/{likeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // --------------------------
    // الإشعارات
    // --------------------------
    match /notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.targetUserId;
      allow create: if request.auth != null;
    }

    // --------------------------
    // الأخبار
    // --------------------------
    match /news/{newsId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --------------------------
    // التفاعلات العامة (زر القلب والنجمة)
    // --------------------------
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

  }
}
