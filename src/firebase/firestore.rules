rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------
    // صلاحيات المدير العام
    // --------------------------
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --------------------------
    // التعليقات داخل المباريات
    // --------------------------
    match /matches/{matchId}/comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الردود داخل التعليقات
    match /matches/{matchId}/comments/{commentId}/replies/{replyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الإعجابات (Likes)
    match /matches/{matchId}/comments/{commentId}/likes/{likeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // الإعجابات على الردود
    match /matches/{matchId}/comments/{parentCommentId}/replies/{replyId}/likes/{likeId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // --------------------------
    // المفضلات (Favorites)
    // --------------------------
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == favoriteId;
    }
    
    // --------------------------
    // تخصيص الأسماء
    // --------------------------
    match /leagueCustomizations/{leagueId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
    match /countryCustomizations/{countryName} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
     match /continentCustomizations/{continentName} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
    match /teamCustomizations/{teamId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
     match /playerCustomizations/{playerId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
    match /coachCustomizations/{coachId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --------------------------
    // الإشعارات
    // --------------------------
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --------------------------
    // تفاصيل المباريات (لتفعيل التعليقات)
    // --------------------------
    match /matches/{matchId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }
    
     // --------------------------
    // مفضلات المدير
    // --------------------------
    match /adminFavorites/{teamId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

  }
}
